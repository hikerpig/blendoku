{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "snapsvg-cjs": ["node_modules/snapsvg-cjs/dist/snap.svg"],
      "*": [
        "*",
        "src/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "lib": [ "es2015"],
  "include": [
    "@types/lodash/index.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "typings/browser",
    "typings/browser.d.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
